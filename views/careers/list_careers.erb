<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    	<link rel="stylesheet" type="text/css" href="styles/style_list_careers.css">
		<title>Lista de carreras disponibles</title>
		<link rel="shortcut icon" href="images/UNRC-color.png">
	</head>
	<body>
		<div class="head">
			<h1>Listado de carreras:</h1>
		</div>

		<div class="container">

			<ul>
				<% @careers.map do |career| %>
						<div class="caja">
								<a href="careers/<%= career.id%>"> <%= career.name %></a>
								<span id="dots">...</span><span id="more">
									<li> Id: <%= career.id%> </li>
		              <li> Cuestionarios en los que aparece: <%= career.surveys.count %> </li>
								</span>
									<button onclick="myFunction()" id="myBtn">Mas informacion</button><hr/>
						</div>

			 	<%end%>
			</ul>
		</div>
		<script>
			function myFunction() {
				  var dots = document.getElementById("dots");
				  var moreText = document.getElementById("more");
				  var btnText = document.getElementById("myBtn");

				  if (dots.style.display === "none") {
				    dots.style.display = "inline";
				    btnText.innerHTML = "Mas informacion";
				    moreText.style.display = "none";
				  } else {
				    dots.style.display = "none";
				    btnText.innerHTML = "Mostras menos";
				    moreText.style.display = "inline";
				  }
			}
		</script>
	</body>
</html>
